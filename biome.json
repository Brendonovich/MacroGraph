{
	"$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							["effect", "effect/**", "@effect/**"],
							["@macrograph/**", ":PACKAGE:"],
							":BLANK_LINE:"
						]
					}
				}
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noConfusingVoidType": "off",
				"noShadowRestrictedNames": "off",
				"noAssignInExpressions": "off"
			},
			"style": { "noNonNullAssertion": "off" },
			"correctness": {
				"noConstructorReturn": "off",
				"noChildrenProp": "off",
				"noUnusedImports": "warn"
			},
			"a11y": { "noStaticElementInteractions": "off" }
		}
	},
	"formatter": { "indentStyle": "tab", "expand": "never" },
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	}
}
